{
    "name": "viSAM Enhanced",
    "short_name": "viSAM+",
    "id": "/index.html",
    "description": "Enhanced visa document management app with AI analysis, biometric auth, and offline support",
    "start_url": "./index.html",
    "display": "standalone",
    "orientation": "portrait",
    "background_color": "#F2F4F7",
    "theme_color": "#0052cc",
    "scope": "./",
    "categories": [
        "productivity",
        "travel",
        "utilities"
    ],
    "lang": "ru",
    "dir": "ltr",
    "shortcuts": [
        {
            "name": "Scan Document",
            "short_name": "Scan",
            "description": "Open AI document scanner",
            "url": "./index.html?screen=scanner",
            "icons": [
                {
                    "src": "./assets/icons/icon-512.png",
                    "sizes": "192x192"
                }
            ]
        },
        {
            "name": "My Documents",
            "short_name": "Documents",
            "description": "View uploaded documents",
            "url": "./index.html?screen=documents",
            "icons": [
                {
                    "src": "./assets/icons/icon-512.png",
                    "sizes": "192x192"
                }
            ]
        },
        {
            "name": "AI Chat",
            "short_name": "Chat",
            "description": "Chat with AI assistant",
            "url": "./index.html?screen=chat",
            "icons": [
                {
                    "src": "./assets/icons/icon-512.png",
                    "sizes": "192x192"
                }
            ]
        }
    ],
    "share_target": {
        "action": "./index.html?share",
        "method": "POST",
        "enctype": "multipart/form-data",
        "params": {
            "title": "title",
            "text": "text",
            "url": "url",
            "files": [
                {
                    "name": "document",
                    "accept": [
                        "image/*",
                        "application/pdf"
                    ]
                }
            ]
        }
    },
    "icons": [
        {
            "src": "./assets/icons/icon-512.png",
            "sizes": "192x192",
            "type": "image/png",
            "purpose": "any"
        },
        {
            "src": "./assets/icons/icon-512.png",
            "sizes": "512x512",
            "type": "image/png",
            "purpose": "any maskable"
        }
    ],
    "screenshots": [
        {
            "src": "./assets/icons/icon-512.png",
            "sizes": "540x720",
            "type": "image/png",
            "form_factor": "narrow"
        }
    ]
}